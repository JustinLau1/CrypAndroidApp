<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="cafe.adriel.cryp.view.qrcode.show.ShowQrCodeActivity">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/vClose"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="start|top"
        android:layout_margin="10dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/ic_close"/>

    <android.support.v7.widget.LinearLayoutCompat
        android:id="@+id/vQrCodeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/vCoin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:textAllCaps="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@android:color/white"
            android:textAlignment="center"
            android:fontFamily="sans-serif-light"
            tools:text="Bitcoin (BTC)"/>

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/vQrCode"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:scaleType="fitCenter"/>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/vPublicKey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:maxLines="2"
            android:textAllCaps="true"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@android:color/white"
            tools:text="14bSgbk7n59DZ8xK6zZcg6MDQR8c9tAoJj"/>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/vTapToCopy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/tap_to_copy"
            android:textAllCaps="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@android:color/white"
            android:fontFamily="sans-serif-light"/>

    </android.support.v7.widget.LinearLayoutCompat>

</FrameLayout>